@model Lucci_Web.Models.KichCo
@{
    ViewBag.Title = "Edit";
}

<h2>Chỉnh Sửa Kích Cỡ</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(sp => sp.TenKichCo)
        @Html.TextBoxFor(sp => sp.TenKichCo, new { @class = "form-control" })
